    "dotenv": "^17.2.2",
    "ejs": "^3.1.10"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.17",
    "typescript": "^5",
    "@clash-app/config": "*"
  }
