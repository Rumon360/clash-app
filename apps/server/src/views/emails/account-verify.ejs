<html dir="ltr" lang="en">
  <%- include('./partials/head') %>
  <body style="background-color: #fafbfb; margin: 0; padding: 0">
    <table
      width="100%"
      cellpadding="0"
      cellspacing="0"
      role="presentation"
      align="center"
      style="background-color: #fafbfb"
    >
      <tbody>
        <tr>
          <td align="center" class="container">
            <table
              align="center"
              width="100%"
              cellpadding="0"
              cellspacing="0"
              role="presentation"
              class="card-wrapper"
              style="max-width: 600px"
            >
              <tbody>
                <tr>
                  <td style="padding: 32px">
